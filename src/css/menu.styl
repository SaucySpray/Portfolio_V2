/* MENU */

.header
    width calc(100% - 160px)
    height 120px
    display flex
    justify-content space-between
    align-items center
    flex-direction row
    position fixed
    top 0
    z-index 20

.header .header-line
    font-family 'Archivo'
    font-size 54px
    color #000

.header .header-menu
    display flex
    justify-content space-between
    align-items center
    flex-direction column
    width 30px
    height 19px
    cursor pointer

.header .header-menu-el
    display block
    width 100%
    height 3px
    background-color #000
    transform rotate(0deg) translateX(0px)
    transform-origin center
    transition transform 0.2s cubic-bezier(0.65, 0.01, 0.46, 1)

.header .header-menu-el-1-anim
    transform rotate(45deg) translateX(11.5px)
    background-color #fff

.header .header-menu-el-2-anim
    transform translateX(100%)
    opacity 0

.header .header-menu-el-3-anim
    transform rotate(-45deg) translateX(11.5px)
    background-color #fff

/* SIDE MENU */

.side-menu
    display flex
    justify-content space-between
    flex-direction column
    width 420px
    height 100vh
    background-color #000
    position fixed
    top 0
    right 0
    transition transform 0.4s cubic-bezier(0.65, 0.01, 0.46, 1)
    transform translateX(110%)
    z-index 10

.side-menu-anim
    transform translateX(0)

.side-menu .menu-nav
    margin 168px auto 0 auto
    font-family 'Archivo'
    font-size 36px
    text-transform uppercase
    list-style none
    padding 0
    color #fff

.side-menu .menu-nav .menu-nav-el
    margin-bottom 12px
    padding 6px 12px
    position relative
    z-index 10
    overflow hidden
    transition 0.2s cubic-bezier(0.65, 0.01, 0.46, 1)
    cursor pointer

.side-menu .menu-nav .menu-nav-el::after
    content ""
    width 110%
    height 90%
    position absolute
    top 0
    left -110%
    z-index -5
    background-color #fff
    transition 0.3s cubic-bezier(0.65, 0.01, 0.46, 1)
    will-change transform

.side-menu .menu-nav .menu-nav-el:hover::after
    left 0

.side-menu .menu-nav .menu-nav-el:hover
    color #000

/* BOTTOM SIDE-MENU */

.side-menu .menu-contact
    display flex
    justify-content space-between
    flex-direction row
    width 340px
    max-width calc(100% - 80px)
    margin 0 auto 80px auto
    font-family 'CircularBlack'
    font-size 16px
    color #fff
    border-top solid white 1px

.side-menu .menu-contact .menu-contact-title
    width 100px

.side-menu .menu-contact .menu-contact-social
    display flex
    justify-content flex-end
    flex-direction row
    width 200px

.side-menu .menu-contact .menu-contact-social-el
    display flex
    justify-content center
    align-items center
    background-repeat no-repeat
    background-size contain
    background-position center
    height 100%
    width 22px
    margin 0 12px

.side-menu .menu-contact .menu-contact-social-el-1
    background-image url('../../static/img/icons/github.svg')
    
.side-menu .menu-contact .menu-contact-social-el-2
    background-image url('../../static/img/icons/linkedin.svg')

.side-menu .menu-contact .menu-contact-social-el-3
    background-image url('../../static/img/icons/twitter.svg')

.side-menu .menu-contact .menu-contact-social-el-4
    background-image url('../../static/img/icons/mail.svg')