.illustrations
    display flex
    justify-content space-around
    flex-flow row wrap
    max-width 100%
    margin-top 140px

.screen-illustration
    display flex
    justify-content flex-end
    flex-direction column
    flex-wrap wrap
    width 380px
    height 400px
    margin 20px
    background-color #f9f9f9
    position relative
    overflow hidden

.screen-illustration-img
    display flex
    justify-content center
    align-items center
    width auto
    height 100%
    margin 0
    padding 0
    object-fit cover
    object-position 10% 50%
    overflow hidden

.illustration-description
    position absolute
    width 380px
    height 50px
    background-color #000
    color #fff
    transition 0.2s cubic-bezier(0.65, 0.01, 0.46, 1)
    transform translateY(100%)

.illustration-title
    font-family CircularBlack 
    font-size 24px
    margin 12px 16px

.screen-illustration:hover .illustration-description
    transform translateY(0)